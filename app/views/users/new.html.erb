<%= form_for @user do |f| %>
    <%= f.label value ="name" %>
    <%= f.text_field :name %><br>

     <%= f.label value ="password"%>
    <%= f.password_field :password %>

     <%= f.label value ="email" %>
     <%= f.text_field :email %><br>
      
       <%= f.label value ="Re-enter password" %>
    <%= f.password_field :password_confirmation %><br>

    <%= f.submit "create account" %>
 <% end %>